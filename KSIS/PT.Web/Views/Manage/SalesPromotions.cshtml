            }
        });
    }

    // 분양입주 상세현황 테이블
    function ListSalesMoveinGrid(pPagerUseYn, pCurPage, pListCnt) {
        $.ajax({
            type: "POST",
            url: "/AjaxAuth/ListSalesMoveinGrid",
            dataType: "html",
            data: { "pPagerUseYn": pPagerUseYn, "pCurPage": pCurPage, "pListCnt": pListCnt },
            async: false,   // 동기식 처리 
            success: function (data) {
                var data = data.split("‡");
                // 그리그 생성
                $("#grid_SalesMovein_detail").empty();
                $("#grid_SalesMovein_detail").html(data[0]);
            },
            error: function (e) {
                    alert("에러 발생.");
                    return false;
            }
        });
    }
    //************ 함수 ************//

    // 분양현황 차트 생성
    function CreateChartSalesRate() {
        // 그래프 데이터 조회
        var jsonData = ListSalesRate();

        var cnt = 0;
        var set = "";        

        for (cnt = 0; cnt < jsonData.length; cnt++) {
            if (jsonData[cnt].y == 0) {
                set = false;
            }
            else {
                set = true;
            }

        }

        // 그래프 데이터가 없는 경우
        if (jsonData == null) {
            alert("분양현황 데이터를 조회하지 못했습니다.");
            return false;
        }

        // 차트 생성
        $("#chart_Sales_rate").highcharts({
            chart: {
                type: "pie",
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            title: {
                text: '당사 분양율',
                style: {
                fontfamily: "NanumGothic",
                fontSize: "13px",
                color: "#6d6d6d"
                }
            },

            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    depth: 35,
                    dataLabels: {
                        enabled: set,
                        formatter: function () {
                            return this.point.name ;
                        },
                        style: {
                        fontfamily: "NanumGothic",
                        fontSize: "10px",
                        color: "#6d6d6d"
                    }
                    },
                    enableMouseTracking: false             
                }
            },
            credits: {
                enabled: false
            },
            series: [{
                type: 'pie',
                name: '분양율',
                data: jsonData,
                style: {
                    fontfamily: "NanumGothic",
                    fontSize: "10px",
                    color: "#6d6d6d"
                }
            }]

        });
    }

    // 입주현황 차트 생성
    function CreateChartMoveInRate() {
        // 그래프 데이터 조회
        var jsonData = ListMoveInRate();
        var cnt = 0;
        var set = "";
        //var Categori = ListSiteStateRateALL("ALL");

        for (cnt = 0; cnt < jsonData.length; cnt++)
        {
            if (jsonData[cnt].y == 0) {
                set = false;
            }
            else {
                set = true;
            }
                    
        }
        
        // 그래프 데이터가 없는 경우
