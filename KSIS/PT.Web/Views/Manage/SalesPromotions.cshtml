            async: false,   // 동기식 처리 
            success: function (data) {
                var data = data.split("‡");
                // 그리그 생성
                $("#grid_Move_rate").empty();
                $("#grid_Move_rate").html(data[0]);
            },
            error: function (e) {
                    alert("에러 발생.");
